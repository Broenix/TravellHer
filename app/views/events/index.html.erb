<div class="container-event">
  <% @events.each do |event| %>
    <%= link_to event_path(event), class:"link-card-event" do %>
      <div class="card-event">
        <%= image_tag event.spot.photo, class:"card-image" %>
        <div class="info-event-card">
            <h3> <%=  event.name %> </h3>
            <p> üìç<%= event.spot.name %></p>
            <div class="event-date-card">
                <%= event.event_date %>
            </div>
            <div class="event-profil-img">
                <%= image_tag current_user.photo %>
              </div>
          </div>
        </div>
    <% end %>
  <% end %>
</div>

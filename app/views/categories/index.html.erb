<div class="category-index-conainer">

  <div class="wrapper-category-index">

    <div class="welcome-message-container">
      <h2>Hello <%=current_user.name%>!</h2>
        <div class="current-location">
          <i class="fas fa-map-marker"></i>
          <h4>Lima</h4>
        </div>
    </div>

    <div class="event-near-you-container">
        <h2>ðŸŽ‰ There are <%= @events.count %> events near you ðŸŽ‰</h2>
        <div class="link-to-event-container">
          <%= link_to "See the events", events_path(@events), class: "button-essential" %>
        </div>
    </div>
  </div>

  <div class= "wrapper-category-container">
    <div>
      <h3>Choose a category</h3>
    </div>

    <div class= "container_category">
      <% @categories.each do |category| %>
        <div class= "category-card">
          <%= link_to category_spots_path(category) do %>
            <%= cl_image_tag category.photo.key, width:300, height: 300 %>
            <p class="category-name"> <%= category.name %> </p>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
